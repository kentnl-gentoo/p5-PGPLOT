#!/usr/local/bin/perl
#
# testpgperl2
#
# Test histogram plotting
#

require "pgplot.pl";

print "\n\nTesting histogram routines...\n\n";

&pgperlv; 

open(FILE,'testpgperl2.dat') || die "Data file testpgperl2.dat not found";
while(<FILE>){
  $i++;
  chop;
  $data[$i-1] = $_;
}


&pgbegin(0,"?",1,1);


&pgscf(2);
&pgslw(4);
&pgsch(1.6);

&pgsci(6);

&pgsci(7);

&pghist($i,*data,0,10,10,2);

&pglabel("Data Value","Number of data items","Test histogram");

&pgend;



